{
  "name": "enhanced-messenger-bot",
  "version": "2.0.0",
  "description": "Modern multi-platform messenger bot with AI integration and advanced features",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cp -r src/public dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t enhanced-bot .",
    "docker:run": "docker run -p 3000:3000 enhanced-bot",
    "migrate": "tsx src/database/migrate.ts",
    "seed": "tsx src/database/seed.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@discordjs/builders": "^1.7.0",
    "@discordjs/rest": "^2.2.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google-cloud/speech": "^6.0.0",
    "@google-cloud/text-to-speech": "^5.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^2.11.2",
    "celebrate": "^15.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.64.0",
    "openai": "^4.20.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "qrcode": "^1.5.3",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.4",
    "telegraf": "^4.15.6",
    "uuid": "^9.0.1",
    "whatsapp-web.js": "^1.23.0",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
