# Enhanced Messenger Bot Configuration
# Copy this file to .env and configure with your API keys and settings

# ===== GENERAL SETTINGS =====
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
HOST=0.0.0.0

# ===== PLATFORM CONFIGURATIONS =====

# Telegram Bot
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_ALLOWED_USERS=user1,user2  # Optional: Restrict to specific users

# WhatsApp Business API
WHATSAPP_ENABLED=false
WHATSAPP_API_TOKEN=your_whatsapp_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Discord Bot
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_GUILD_ID=your_discord_guild_id  # Optional: Restrict to specific guild

# Facebook Messenger
FACEBOOK_ENABLED=false
FACEBOOK_PAGE_TOKEN=your_facebook_page_token
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_VERIFY_TOKEN=your_facebook_verify_token

# ===== AI PROVIDERS =====

# OpenAI Configuration
OPENAI_ENABLED=true
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Claude AI Configuration
CLAUDE_ENABLED=false
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=1000

# Ollama (Local LLM) Configuration
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# ===== DATABASE CONFIGURATION =====
DATABASE_TYPE=mongodb
DATABASE_URL=mongodb://localhost:27017/enhanced-bot
DATABASE_SSL=false

# ===== REDIS CONFIGURATION =====
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379

# ===== WEB DASHBOARD =====
WEB_DASHBOARD_ENABLED=true
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_secure_password_here  # Change this!
SESSION_SECRET=your_session_secret_here

# ===== SECURITY =====
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
RATE_LIMIT_MAX=100  # Max requests per window

# ===== CORS SETTINGS =====
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ===== FEATURE FLAGS =====
FEATURE_IMAGE_GENERATION=true
FEATURE_VOICE_RECOGNITION=true
FEATURE_TEXT_TO_SPEECH=true
FEATURE_FILE_PROCESSING=true
FEATURE_SCHEDULING=true
FEATURE_ANALYTICS=true

# ===== LOGGING =====
LOG_DIR=./logs

# ===== GOOGLE CLOUD SERVICES (Optional) =====
# For advanced voice recognition and text-to-speech
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_PROJECT_ID=your_project_id

# ===== ADVANCED SETTINGS =====

# Webhook Settings
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=30000

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav

# Voice Settings
TTS_DEFAULT_VOICE=en-US-Standard-A
TTS_SPEED=1.0

# Analytics
ANALYTICS_RETENTION_DAYS=30

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000  # 24 hours in milliseconds
BACKUP_LOCATION=./backups